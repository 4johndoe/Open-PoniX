#!/bin/sh

# This script builds an xdmenu.xd config for selected session which is SESSION TYPE specific
# (based on /etc/cmd/freerdp.xdmenu for example)
#
# Then sets variable EDIT_SESID and runs xdmenu script edit_session.xd which in it's turn
# includes the builded session specific xdmenu script 
#

if [ -z "$1" ] ; then
	echo "Require session number!"
	exit
fi

store_variable EDIT_SESID $1 RUNTIME
xdmenu edit_session.xd
