#!/bin/sh

. $TS_GLOBAL
load_lang base

if [ "$1" = "" ] ; then
	echo "Usage: repli_msgbox text"
	exit
fi

echo "
caption = Ponix
colorscheme = 4
exitafterauto

begin item
   name = QUIT
   label = $1
   bullet =
   type = msgbox | auto | hidden
end
" > /tmp/repli_msgbox.menu

replimenu -f /tmp/repli_msgbox.menu
rm /tmp/repli_msgbox.menu


