export PATH=/bin:/usr/bin
export HOME=/root
export LOGFILE=/var/log/boot.log
export CONSOLE=/dev/tty1
export REPLIMENU=/etc/replimenu
export SYSLOG=/var/log/messages.log
export PS1='\h:\w\$ '
export LD_LIBRARY_PATH=/lib:/lib/eToken/:/lib/pcsc/drivers/ifd-ASEKey
export TERM=linux
export MENUCOLOUR=4
export TS_USER=/etc/ponix.user
export TS_DEFAULTS=/etc/ponix.defaults
export TS_BUILDTIME=/ponix.buildtime
export TS_RUNTIME=/etc/ponix.runtime
export TS_NETWORK=/etc/ponix.network
export TS_GLOBAL=/etc/ponix.global
export TS_CUSTOM=/etc/ponix.custom
export TS_FUNCTIONS=/etc/ponix.functions
export TS_HOSTS=/etc/ponix.hosts
export WKDIR=/tmp/ts
export FILESYSTEMS="fat vfat ntfs isofs udf"

# this updated by network script and used by GUIs mostly
export NET_DEVICELIST="/tmp/net_interfaces"

# used by xdmenu and external xdmenu tools. folder contains xdmenu helpful scripts
# later can be transfered to /bin easily by changing this var
export XDMENU_SCRIPTS=/etc/xdmenu/scripts

# full path to connections manager binary
export CONNECTION_MANAGER=/etc/xdmenu/scripts/connection_manager

# upper limit for while loops enumerating sessions
export MAX_SESSIONS=8

# Ponix 3 goes GUI. One life. One love. One display.
export DISPLAY=:1

