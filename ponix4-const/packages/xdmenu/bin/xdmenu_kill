#!/bin/sh

if [ "$1" = "" ] ; then
	echo "To kill xdmenu windows by class name (or in fact any window)"
	echo "Usage: onexd_focus [classname]"
	exit
fi

CLASSNAME=$1

if [ "$DISPLAY" = "" ] ; then
	echo "DISPLAY is not set..."
	exit
fi

WID=`xdotool search --onlyvisible --class "$CLASSNAME" 2>/dev/null`

if [ -n "$WID" ] ; then
	xdotool windowkill $WID 2>/dev/null	
fi


