#! /bin/sh

. $TS_GLOBAL

case "$1" in  
init)
    if ! pkg_initialized $PACKAGE; then
        
		pkg require graphics
		
		depmod
		modprobe videodev
		modprobe v4l2-common
		modprobe v4l2-int-device
		modprobe uvcvideo

	 pkg_set_init_flag $PACKAGE

    fi

    ;;
help)
    echo "Usage: $0 init"
    ;;
  *)
    exit 1
    ;;
esac

exit 0
