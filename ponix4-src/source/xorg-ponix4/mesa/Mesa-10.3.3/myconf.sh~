#/bin/sh

./configure --prefix=/mesa --enable-gallium-llvm=no --enable-64-bit=no --with-gallium-drivers=no \
--disable-glut --disable-gallium --disable-gallium-intel \
--disable-gallium-llvm --with-gallium-drivers= --with-egl-platforms=x11,drm \
--disable-glu --disable-shared-dricore --enable-dri --enable-gbm --disable-xvmc \
--disable-vdpau --disable-gallium-gbm --disable-llvm-shared-libs --enable-dri3 \
--disable-driglx-direct --enable-egl --enable-shared-glapi --enable-glx  
