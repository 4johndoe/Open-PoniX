#!/bin/sh

rm -r /freerdp/*

make clean
rm CMakeCache.txt

cmake -DCMAKE_INSTALL_PREFIX=/freerdp \
-DWITH_SSE2=ON \
-DWITH_MANPAGES=OFF \
-DWITH_FFMPEG=OFF \
-DWITH_NEON=OFF \
-DWITH_DIRECTFB=OFF \
-DWITH_GSTREAMER=OFF \
-DWITH_DEBUG_ALL=OFF \
-DWITH_PCSC=ON \
-DWITH_CLIENT_INTERFACE=ON \
-DSTATIC_CHANNELS=OFF \
-DCHANNEL_AUDIN_SERVER=OFF \
-DCHANNEL_PRINTER=ON \
-DCHANNEL_RDPSND_SERVER=OFF \
-DCHANNEL_PRINTER_CLIENT=ON \
-DCHANNEL_SMARTCARD=ON \
-DCHANNEL_SMARTCARD_CLIENT=ON \
-DCHANNEL_URBDRC=OFF

make ; make install